/** scroll.wxss **/
.w_scroll
{
  padding: 10rpx 20rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #e9e9e9;
}
.scroll_swiper
{
  width: 670rpx;
  height: 100%;
}
.scroll-cont
{
  font-size: 26rpx;
  height: 100%;
  line-height: 60rpx;
  padding-left: 20rpx;
  color: #FF0000;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.scroll-cont>image
{
  flex-grow: 0;
  flex-shrink:0;
}
.scroll-cont>.txt
{
  flex-grow: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  font-size: 22rpx;
  padding: 0rpx 10rpx;
}
